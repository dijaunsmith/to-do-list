<%-include ("header") -%>
<body>
    <div class="box" id="heading">
        <h1><%= listTopic %> </h1>
    </div>
    <div class="box">
        <% for (var i=0; i<newListItems.length; i++){ %>
            <div class="item">
                <input type="checkbox">
            <p> <%=newListItems[i]%> </p>
            </div>
        <% } %>

        <form action="/" method="post" class="item"> 
            <input type="text" name="listItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%=listTopic%>">+</button>
        </form>
    </div>
</body>
<%-include ("footer") -%>
</html>